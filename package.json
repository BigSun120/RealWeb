{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "个人博客",
  "main": "backend/app.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:email\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:email": "npm run email:start",
    "dev:full": "npm run email:setup && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:frontend -- --fix && npm run lint:backend -- --fix",
    "format": "prettier --write \"**/*.{js,vue,ts,json,md}\"",
    "type-check": "cd frontend && npm run type-check",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "deploy": "npm run build && npm start",
    "deploy:pm2": "npm run build && pm2 start backend/app.js --name website",
    "backup": "scripts/backup.sh",
    "restore": "scripts/restore.sh",
    "logs:pm2": "pm2 logs website",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "security:audit": "npm audit && cd frontend && npm audit && cd ../backend && npm audit",
    "security:fix": "npm audit fix && cd frontend && npm audit fix && cd ../backend && npm audit fix",
    "db:init": "cd backend && npm run db:init",
    "db:seed": "cd backend && npm run db:seed",
    "email:setup": "npm run email:check-docker && npm run email:pull",
    "email:check-docker": "docker --version || (echo \"请先安装Docker\" && exit 1)",
    "email:pull": "docker pull inbucket/inbucket:latest",
    "email:start": "docker run --rm --name inbucket-dev -p 9000:9000 -p 2500:2500 -p 1100:1100 -e INBUCKET_SMTP_DOMAIN=godaug.fun,localhost,test.local -e INBUCKET_SMTP_ADDR=0.0.0.0:2500 -e INBUCKET_WEB_CORSORIGIN=http://localhost:3000,http://localhost:5173 inbucket/inbucket:latest",
    "email:stop": "docker stop inbucket-dev || true",
    "email:logs": "docker logs -f inbucket-dev",
    "email:status": "docker ps | grep inbucket-dev || echo \"Inbucket未运行\"",
    "email:clean": "docker stop inbucket-dev || true && docker rm inbucket-dev || true",
    "dev:compose": "docker-compose -f docker-compose.dev.yml up -d && concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "email:compose:up": "docker-compose -f docker-compose.dev.yml up -d",
    "email:compose:down": "docker-compose -f docker-compose.dev.yml down",
    "email:compose:logs": "docker-compose -f docker-compose.dev.yml logs -f inbucket",
    "email:test": "node scripts/test-email.js",
    "email:send-test": "node scripts/send-external-test.js",
    "dns:check": "node scripts/test-dns-config.js"
  },
  "keywords": [
    "blog",
    "games",
    "vue",
    "node",
    "mongodb",
    "express",
    "personal-website"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/personal-website.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/personal-website/issues"
  },
  "homepage": "https://github.com/yourusername/personal-website#readme",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "prettier": "^2.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "http-proxy-middleware": "^3.0.5"
  }
}
